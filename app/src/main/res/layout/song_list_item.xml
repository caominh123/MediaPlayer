<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageviewHinh"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="8dp" />
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_toLeftOf="@id/imageviewMenuSong"
        android:layout_toRightOf="@id/imageviewHinh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textviewTen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ten Bai Hat"
            android:textSize="16sp"
            android:textColor="#0a0a0a"
            android:singleLine="true"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/textviewArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textviewTen"
            android:layout_marginTop="4dp"
            android:text="Ca Si"
            android:textSize="14dp"
            android:singleLine="true"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/imageviewMenuSong"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="0dp"
        android:src="@drawable/ic_more_vert_black_28dp" />
</RelativeLayout>